<%- include('partials/header', { seo: seo, config: config }) %>

<section class="bg-gradient-to-br from-indigo-50 via-white to-cyan-50 py-20">
    <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl sm:text-5xl font-extrabold text-gray-900 tracking-tight">Upload. Share. Listen.</h1>
        <p class="mt-4 max-w-2xl mx-auto text-lg text-gray-600">Free hosting for Video (MP4/WebM) and Audio (MP3/WAV).</p>

        <div class="mt-10 max-w-2xl mx-auto">
            <form id="home-upload-form" action="/upload" method="post" enctype="multipart/form-data" 
                  data-upload-form 
                  data-max-size="<%= config.uploads.max_size_bytes %>"
                  data-progress-container="p-cont" data-progress-bar="p-bar"
                  data-percentage-text="p-text" data-filename-text="p-name"
                  data-error-text="p-err" data-success-text="p-succ">
                <label for="media-input" data-drop-zone class="relative block w-full rounded-lg border-2 border-dashed border-gray-300 p-12 text-center hover:border-indigo-400 cursor-pointer transition-colors bg-white">
                    <i class="bi bi-cloud-arrow-up text-5xl text-indigo-400"></i>
                    <span class="mt-2 block text-sm font-medium text-gray-900">Drag & Drop Media File</span>
                    <span class="block text-xs text-gray-500">or click to browse</span>
                    <input type="file" name="media" accept="audio/*,video/*" class="sr-only" id="media-input">
                </label>
            </form>
            <p class="mt-2 text-xs text-gray-500">Max size: <%= config.uploads.limit_text %></p>
        </div>

        <div id="p-cont" class="hidden mt-8 max-w-2xl mx-auto text-left">
            <p id="p-name" class="text-sm font-medium text-gray-700 truncate"></p>
            <div class="mt-2 w-full bg-gray-200 rounded-full h-2.5">
                <div id="p-bar" class="bg-indigo-600 h-2.5 rounded-full" style="width: 0%"></div>
            </div>
            <p id="p-text" class="mt-1 text-xs text-indigo-600 text-right">0%</p>
        </div>
        <div id="p-err" class="hidden mt-4 text-red-600 bg-red-50 p-3 rounded text-sm font-medium"></div>
        <div id="p-succ" class="hidden mt-4 text-green-600 bg-green-50 p-3 rounded text-sm font-medium"></div>
    </div>
</section>

<%- include('partials/footer', { config: config }) %>

<script src="/assets/js/uploader.js"></script>
