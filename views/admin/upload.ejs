<div class="border-2 border-black p-6 bg-white max-w-3xl mx-auto mt-8">
    <h3 class="text-xl font-bold uppercase mb-4 bg-black text-white inline-block px-2">// System Upload</h3>
    
    <form id="admin-upload-form" action="/admin/upload" method="post" enctype="multipart/form-data" 
          data-upload-form 
          data-max-size="<%= data.max_file_size %>"
          data-success-redirect="/admin/manage"
          data-progress-container="ap-cont" data-progress-bar="ap-bar"
          data-percentage-text="ap-text" data-filename-text="ap-name"
          data-error-text="ap-err" data-success-text="ap-succ">
        
        <input type="hidden" name="csrf_token" value="<%= csrf_token %>">
        
        <label for="f-in" data-drop-zone class="border-4 border-dashed border-black bg-neutral-50 p-12 text-center cursor-pointer transition-all duration-200 block hover:bg-[#FFDE59]">
            <p class="text-3xl font-black uppercase mb-2">Drag & Drop</p>
            <p class="font-mono text-sm">Target: /public/uploads</p>
            <input type="file" name="media" id="f-in" class="hidden" accept="audio/*,video/*">
        </label>
    </form>
    
    <div id="ap-cont" class="hidden mt-6 border-2 border-black p-4 bg-neutral-50">
        <div class="flex justify-between font-mono font-bold mb-1">
            <span id="ap-name" class="truncate">Uploading...</span>
            <span id="ap-text">0%</span>
        </div>
        <div class="w-full h-4 border-2 border-black bg-white">
            <div id="ap-bar" class="h-full bg-[#5CE1E6] w-0"></div>
        </div>
    </div>
    
    <div id="ap-err" class="hidden mt-4 p-4 border-2 border-red-600 bg-red-50 text-red-700 font-bold font-mono"></div>
    <div id="ap-succ" class="hidden mt-4 p-4 border-2 border-green-600 bg-green-50 text-green-700 font-bold font-mono">Upload Complete. Redirecting...</div>
</div>

<script src="/assets/js/uploader.js"></script>
